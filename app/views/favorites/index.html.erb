<div class="title">
	<h3>お気に入り</h3>
</div>
<br>

<% if @products.length == 0 %>
	<h4>お気に入り商品はありません</h4>
<% end %>
<div class="col-md-8 col-md-offset-2">

	<% @products.each do |product| %>

		<div class="product_index">
			<%= link_to products_show_path(product.id) do %>
				<%= attachment_image_tag product, :music_image, class: "", fallback: "no_image.jpg", size: "200x200" %><br>
			<% end %>
			<%= link_to products_show_path(product.id) do %>
				<%= product.title.truncate(14) %><br>
			<% end %>
			<%= product.artist.artist_name %>
			<%= link_to favorite_path(product), :method => :delete, data: { confirm: '削除しますか？' } , class: "btn btn-default btn-xs" do %>
				<i class="delete-icon glyphicon glyphicon-trash" aria-hidden="true"></i>
			<% end %>
		</div>
	<% end %>
</div>

<style>

h4{
	margin-top: 50px;
	text-align: center
}
.space{
	height: 200px;
}

.product_index {
	background-color: #f5f5f5;
	margin: 5px;
	padding: 10px;
	height: 270px;
	width: 220px;
	float: left;
	border-radius: 10px;
}

.btn.btn-default {
	float: right;
}
.delete-icon {
	height: 24px;
	width: 20px;
	padding: 3px;
	font-size: 14px;
}
</style>