<h1>マイページ</h1>

<% if flash[:notice] %>
       <p class="alert alert-success"><%= flash[:notice] %></p>
<% end %>

<br>
<br>

<div class="profile col-md-offset-2">
	<div class="col-md-3">
		<label>プロフィール画像</label>
		<%= attachment_image_tag @user, :profile_image,  format: 'jpeg', class: "", fallback: "no_image.jpg", size: "240x280" %>
	</div>

	<br>
	<br>
	<div class="col-md-5 col-md-offset-1">
		<table class="table">
			<tbody>
				<tr>
					<td>ユーザ名</td>
					<td><%= @user.user_name %></td>
				</tr>
				<tr>
					<td>かな</td>
					<td><%= @user.user_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @user.zip_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= @user.address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= @user.phone_number %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

<div class="link col-md-10">
	<%= link_to '注文履歴一覧', edit_user_path(current_user.id), class: "col-md-3 col-md-offset-3" %>

	<%= link_to 'ユーザ情報変更', edit_user_path(current_user.id), class: "col-md-4 col-md-offset-2" %>
</div>



<style>
	.link{
		margin-top: 100px;
	}
	.profile{
		margin-bottom: 50px;
	}
</style>