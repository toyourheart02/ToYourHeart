<div class="title">
	<h3>マスタ登録</h3>
</div>

<% if flash[:notice] %>
       <p class="alert alert-success"><%= flash[:notice] %></p>
<% end %>
<% if flash[:warning] %>
       <p class="alert alert-warning"><%= flash[:warning] %></p>
<% end %>
<br>


<div class="master">
	<h3>アーティスト登録</h3>
	<%= form_for(@artist) do |f| %>
		<label class="">アーティスト名</label>
		<%= f.text_field :artist_name %>
		<br>
		<label class="">よみがな</label>
		<%= f.text_field :artist_kana %>
		<%= f.submit "登録", class: "submit btn btn-default btn-sm" %>
	<% end %>

	<h3>レーベル登録</h3>
	<%= form_for(@label) do |f| %>
		<label class="">レーベル名</label>
		<%= f.text_field :label_name %>
		<%= f.submit "登録", class: "submit btn btn-default btn-sm" %>
	<% end %>

	<h3>プレゼントシーン登録</h3>
	<%= form_for(@scene) do |f| %>
		<label class="">シーン名</label>
		<%= f.text_field :scene_name %>
		<%= f.submit "登録", class: "submit btn btn-default btn-sm" %>
	<% end %>

	<h3>ジャンル登録</h3>
	<%= form_for(@genre) do |f| %>
		<label class="">ジャンル名</label>
		<%= f.text_field :genre_name %>
		<%= f.submit "登録", class: "submit btn btn-default btn-sm" %>
	<% end %>

	<h3>楽曲登録</h3>
	<%= form_for(@music) do |f| %>
		<label class="">楽曲名</label>
		<%= f.text_field :music_name %>
		<br>
		<label class="">よみがな</label>
		<%= f.text_field :music_kana %>
		<br>
		<label class="">アーティスト名</label>
	     <%= f.select :artist_id, options_from_collection_for_select(@artists, :id, :artist_name), {include_blank: true}, class: "searchable" %>
		<%= f.submit "登録", class: "submit btn btn-default btn-sm" %>
	<% end %>
	<br>
</div>

<div class="masternew-link">
	<%= link_to '戻る', admins_top_path%>
</div>



<style>
	h3{
		text-align: left;
	}


	#tab-menu li {
	  float: left;
	  list-style-type: none;
	  width: 40px;
	}

	.active{
		text-orientation: underline;
	}

	.artist{
		width: 200px;
		/*display: none;*/
	}

	.master{
		margin-left: 30%;
		width: 40%;
		background-color: #f5f5f5;
		border-radius: 10px;
		padding: 20px 10px 20px 70px;
		position: relative;
	}
	.submit {
		position: absolute;
		right: 180px;
	}
	.masternew-link {
		margin-left: 30%;
		margin-top: 10px;
	}
</style>

